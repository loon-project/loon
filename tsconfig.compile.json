{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dts",
    "types":[
      "node",
      "express",
      "reflect-metadata",
      "chai",
      "mocha",
      "ava"
    ]
  },

  "exclude": [
    "node_modules",
    "test",
    "dts"
  ]
}