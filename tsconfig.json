{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    // "allowJs": true,
    "types":[
      "node",
      "express",
      "reflect-metadata",
      "chai",
      "mocha",
      "ava"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}